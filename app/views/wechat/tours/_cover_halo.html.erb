        <li>
          <%= link_to wechat_tour_avator_path tour do %>
            <img class="lazy" data-original="<%= tour.cover_image_small_d.url(:medium) %>">
            <%#= image_tag tour.cover_image_small_d.url %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% else %>
