<p id="notice"><%= notice %></p>

<h1>Listing Routes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Tour</th>
      <th>Name</th>
      <th colspan="3">Actions</th>
      <th>Days</th>
      <th>Departures</th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.tour_id %></td>
        <td><%= route.name %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Days', route_days_path(route) %></td>
        <td><%= link_to 'Departures', route_departures_path(route) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

