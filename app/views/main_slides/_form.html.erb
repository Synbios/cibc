<% content_for :stylesheets do %>
  <%= stylesheet_link_tag '/unify/assets/plugins/sky-forms-pro/skyforms/css/sky-forms.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '/unify/assets/plugins/sky-forms-pro/skyforms/custom/custom-sky-forms.css', media: 'all', 'data-turbolinks-track' => true %>
<% end %>

<%= form_for @main_slide, html: { multipart: true, class: "sky-form" } do |f| %>
  <% if @main_slide.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@main_slide.errors.count, "error") %> prohibited this slide from being saved:</h2>

      <ul>
      <% @main_slide.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <section>
      <%= f.label :name, "名称", class: "label" %>
      <label class="input">
        <%= f.text_field :name %>
      </label>
    </section>

     <section>
      <%= f.label :order, "顺序", class: "label" %>
      <label class="input">
        <%= f.number_field :order %>
      </label>
    </section>

    <section>
      <%= f.label :active, "对外显示", class: "label" %>
      <div class="inline-group">
          <label class="radio">
            <%= f.radio_button :active, '1', checked: true %>
            <i class="rounded-x"></i>上线
          </label>
          <label class="radio">
            <%= f.radio_button :active, '0' %>
            <i class="rounded-x"></i>下线
          </label>
      </div>
    </section>

    <section>
      <%= f.label :image, "图片", class: "label" %>
      <label for="file" class="input input-file">
        <div class="button"><%= f.file_field :image, as: :file %>选择文件</div><input type="text" readonly="">
      </label>
    </section>
  
  </fieldset>

  <footer>
    <button type="submit" class="btn-u">提交</button>
    <button type="button" class="btn-u btn-u-default" onclick="window.history.back();">Back</button>
  </footer>
<% end %>
