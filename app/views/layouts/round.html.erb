<!--[if !IE]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <title><%= yield(:title) %></title>
  <!-- Meta -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
  <meta name="description" content="WeChat application | JAPAN round trip">
  <meta name="author" content="Michael Zhou">

  <!-- Favicon -->
  <link rel="shortcut icon" href="favicon.ico">

  <!-- Web Fonts -->
  <!-- <link rel='stylesheet' type='text/css' href='http://fonts.useso.com/css?family=Roboto+Slab:400,300,700'> -->

  <!-- Local Fonts -->
  
  <!-- Manifest -->
  <%= stylesheet_link_tag '/unify/assets/plugins/bootstrap/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '/unify/assets/plugins/font-awesome/css/font-awesome.min.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '/unify/assets/css/style.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '/unify/assets/plugins/owl-carousel/owl-carousel/owl.carousel.css', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'round', media: 'all', 'data-turbolinks-track' => true %>

  <!-- CSS Customization -->  
  <%= yield :stylesheets %>
</head>
<body>
  <div class="wrapper">
    <%= yield %>
  </div>
  
  <%= yield :modals %>
  <%= javascript_include_tag '/unify/assets/plugins/jquery/jquery.min.js', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '/unify/assets/plugins/jquery/jquery-migrate.min.js', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '/unify/assets/plugins/bootstrap/js/bootstrap.min.js', media: 'all', 'data-turbolinks-track' => true %>

  <%= javascript_include_tag '/unify/assets/plugins/jquery/jquery-migrate.min.js', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '/unify/assets/plugins/smoothScroll.js', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '/unify/assets/plugins/owl-carousel/owl-carousel/owl.carousel.min.js', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'round', media: 'all', 'data-turbolinks-track' => true %>
  
  <!-- weixin -->
  <%#= javascript_include_tag 'http://res.wx.qq.com/open/js/jweixin-1.0.0.js' %>

  <%= yield :script %>

  <!--[if lt IE 9]>
    <%= javascript_include_tag '/unify/assets/plugins/respond.js' %>
    <%= javascript_include_tag '/unify/assets/plugins/html5shiv.js' %>
    <%= javascript_include_tag '/unify/assets/plugins/placeholder-IE-fixes.js ' %>
  <![endif]-->
</body>
</html>
