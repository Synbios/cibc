<p id="notice"><%= notice %></p>

<p>
  <strong>类型:</strong>
  <%  @tour_avator.tour_categories.each do |tour_category| %>
    <%= tour_category.name %>
  <% end %>
</p>

<p>
  <strong>首页显示顺序</strong>
  <%= @tour_avator.order %>
</p>

<p>
  <strong>微信分享标题</strong>
  <%= @tour_avator.wechat_share_title %>
</p>

<p>
  <strong>微信分享描述</strong>
  <%= @tour_avator.wechat_share_description %>
</p>

<p>
  <strong>微信分享小图标: </strong>
  <%= image_tag @tour_avator.wechat_share_icon.url if @tour_avator.wechat_share_icon.present? %>
</p>


<%= link_to '修改', edit_tour_avator_path(@tour_avator) %> |
<%= link_to '返回列表', tours_path %>
<hr style="margin: 0">
<div class="sys-masthead">
  <%= link_to wechat_tours_path, class: "sys-masthead-logo" do %>
    <%= image_tag "huang/logo.png" %>
  <% end %>
</div>

<div class="grey_bg tour_list">
  <br>
  <div class="container margin-bottom-10">
    <div class="index_tour_item">
      <div class="hd"><span class="price"><em>￥<%= @tour_avator.start_price %> </em>起</span>
        <a href="#">
          <div class="title"><%= @tour_avator.cover_title.html_safe %></div>
        </a>
      </div>
      <div class="bd">
        <div class="pic">
          <a href="#">
            <%= image_tag @tour_avator.cover_image_large.url %>
          </a>
          <i class="icon-a-list-intro"></i>
          <i class="icon-a-list-pic-cover"></i>

          <div class="info">
            <div class="txt count"><%= @tour_avator.cover_info.html_safe %></div>
          </div>
        </div>
        <ul class="fn-list">
          <li>
            <a href="#">
              <%= image_tag @tour_avator.cover_image_small_a.url %>
            </a>
          </li>
          <li>
            <a href="#">
              <%= image_tag @tour_avator.cover_image_small_b.url %>
            </a>
          </li>
          <li>
            <a href="#">
              <%= image_tag @tour_avator.cover_image_small_c.url %>
            </a>
          </li>
          <li>
            <a href="#">
              <%= image_tag @tour_avator.cover_image_small_d.url %>
            </a>
          </li>
        </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="tp-banner-container">
  <div class="tp-banner">
    <ul>
      <% @tour_avator.slides.each do |slide| %>
      <li class="revolution-mch-1" data-transition="fade" data-slotamount="5" data-masterspeed="1000" data-title="mainSlide">
        <!-- MAIN IMAGE -->
        <%= image_tag slide.image.url, alt: "darkblurbg", :"data-bgfit" => "cover", :"data-bgposition" => "left top", :"data-bgrepeat" => "no-repeat" %>

        <div class="tp-caption revolution-ch1_c sft start"
        data-x="center"
        data-hoffset="0"
        data-y="230"
        data-speed="1500"
        data-start="500"
        data-easing="Back.easeInOut"
        data-endeasing="Power1.easeIn"
        data-endspeed="300">
        <%= @tour_avator.name.html_safe  unless @tour_avator.name.nil? %>
        </div>

        <!-- LAYER -->
        <div class="tp-caption revolution-ch2_c sft"
        data-x="center"
        data-hoffset="0"
        data-y="350"
        data-speed="1400"
        data-start="2000"
        data-easing="Power4.easeOut"
        data-endspeed="300"
        data-endeasing="Power1.easeIn"
        data-captionhidden="off"
        style="z-index: 6">
        <%= @tour_avator.slider_subtitle.html_safe unless @tour_avator.slider_subtitle.nil? %>
        </div>

        <!-- LAYER -->
        <!-- <div class="tp-caption sft"
        data-x="center"
        data-hoffset="0"
        data-y="310"
        data-speed="1600"
        data-start="2800"
        data-easing="Power4.easeOut"
        data-endspeed="300"
        data-endeasing="Power1.easeIn"
        data-captionhidden="off"
        style="z-index: 6">
          <a href="#" class="btn-u btn-brd btn-brd-hover btn-u-light">点我电询</a>
        </div> -->
      </li>
      <% end %>

    </ul>
    <div class="tp-bannertimer tp-bottom"></div>
  </div>
</div>
<div style="width: 100%">
  <%= image_tag "/img/huang/t1-ad-1.jpg", style: "width: 100%; margin: 10px 0 20px 0" %>
</div>
<div class="no-padding">
  <div class="container">
    <%= @tour_avator.features.html_safe unless @tour_avator.features.nil? %>
  </div>

  <div class="container huang_features_2">
    <% @tour_avator.high_lights.each do |high_light| %>
      <div class="col-xs-6">
        <%= image_tag high_light.image.url %>
      </div>
    <% end %>
  </div>

</div>

<%#= image_tag @tour_avator.content_image.url(:minified), style: "width:100%" %>
<% @shards.each do |shard| %>
  <%= image_tag shard.image.url, style: "width:100%" %>
<% end %>