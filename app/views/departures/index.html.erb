<div class="container container-sm">
  <p id="notice"><%= notice %></p>

  <div class="tag-box tag-box-v3 margin-bottom-40">
    <h2>资源所在位置</h2>
    <p>团队: <%= @route.tour.name %></p>
    <p>线路: <%= @route.name %></p>
  </div>

  <div class="headline">
    <h2>団期和价格列表</h2>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>出发日期</th>
        <th>座位数</th>
        <th>价格</th>
        <th>具体操作</th>
      </tr>
    </thead>

    <tbody>
      <% @departures.each do |departure| %>
        <tr>
          <td><%= departure.start_time.strftime("%Y-%m-%d") %></td>
          <td><%= departure.seats %></td>
          <td><%= departure.price %></td>
          <td>
            <%= link_to '查看', departure, class: "btn btn-success btn-xs" %>
            <%= link_to '修改', edit_departure_path(departure), class: "btn btn-warning btn-xs" %>
            <%= link_to '删除', departure, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '添加新団期', new_route_departure_path(@route) %> |
  <%= link_to '返回线路列表', tour_routes_path(@route.tour) %>
</div>