<p id="notice"><%= notice %></p>

<h1>Listing Departures</h1>
<h2>Tour: <%= @route.tour.name %></h2>
<h3>Route: <%= @route.name %></h3>
<table class="table">
  <thead>
    <tr>
      <th>Start time</th>
      <th>Seats</th>
      <th>Price</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @departures.each do |departure| %>
      <tr>
        <td><%= departure.start_time.strftime("%Y-%m-%d") %></td>
        <td><%= departure.seats %></td>
        <td><%= departure.price %></td>
        <td><%= link_to 'Show', departure %></td>
        <td><%= link_to 'Edit', edit_departure_path(departure) %></td>
        <td><%= link_to 'Destroy', departure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Departure', new_route_departure_path(@route) %>
